@model List<Feature>
@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Özellikler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Özellikler Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Özellikler ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>

                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Açıklama2</th>
                                    <th scope="col">Resim</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.Description2</td>
                                        <td><img src="@item.ImageUrl" style="width: 300px; height: 300px;" /></td>

                                    </tr>
                                    <tr>
                                        <td><a href="/Features/UpdateFeature/@item.FeatureId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

