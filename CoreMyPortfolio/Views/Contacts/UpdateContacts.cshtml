@model Contact
@{
    ViewData["Title"] = "UpdateContacts";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <form method="post">

                            <input type="hidden" asp-for="ContactId" />
                            <label>Başlık</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Açıklama</label>
                            <textarea rows="4" asp-for="Description" class="form-control"></textarea>
                            <br />
                            <label>Telefon 1</label>
                            <input type="text" asp-for="Phone1" class="form-control" />
                            <br />
                            <label>Telefon 2</label>
                            <input type="text" asp-for="Phone2" class="form-control" />
                            <br />
                            <label>Email 1</label>
                            <input type="text" asp-for="Email1" class="form-control" />
                            <br />
                            <label>Email 2</label>
                            <input type="text" asp-for="Email2" class="form-control" />
                            <br />
                            <label>Adress Bilgisi</label>
                            <textarea rows="4" asp-for="Address" class="form-control"></textarea>
                            <br />
                            <button class="btn btn-warning">İletişim Bilgisi Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

