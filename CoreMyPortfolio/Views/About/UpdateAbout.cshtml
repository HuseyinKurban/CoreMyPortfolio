@model About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkımda Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <form method="post">

                            <input type="hidden" asp-for="AboutId" />
                            <label>Başlık</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Alt Açıklama</label>
                            <textarea rows="4" asp-for="SubDescription" class="form-control"></textarea>
                            <br />
                            <label>Detay</label>
                            <textarea rows="4" asp-for="Details" class="form-control"></textarea>
                            <br />
                            <button class="btn btn-warning">Hakkımda Bilgisi Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


