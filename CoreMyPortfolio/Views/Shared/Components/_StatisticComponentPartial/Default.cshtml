<section id="stats" class="s-stats">
    <div class="row block-1-4 block-tab-1-2 block-mob-full stats">

        <div class="col-block stats__col ">
            <div class="stats__count">
                @ViewBag.SkillCount
            </div>
            <h4>Yetenek Sayım</h4>
        </div>
        <div class="col-block stats__col">
            <div class="stats__count">
                @ViewBag.ExperienceCount
            </div>
            <h4>İş Deneyimim</h4>
        </div>
        <div class="col-block stats__col stats__col--highlight">
            <div class="stats__upsign">
                <a href="#"><i class="im im-arrow-up" aria-hidden="true"></i></a>
            </div>
            <div class="stats__count">

                @ViewBag.skillValueAvg
            
            </div>
            <h4>Yetenek Ortalamam</h4>
        </div>
        <div class="col-block stats__col">
            <div class="stats__count">
                @ViewBag.PortfolioCount
            </div>
            <h4>Sitedeki Projelerim</h4>
        </div>

    </div>
</section>