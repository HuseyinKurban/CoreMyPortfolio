@{
    ViewData["Title"] = "StatisticIndex";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İstatistikler</h4>
        <div class="row">
            <div class="col-md-3">
                <div class="card card-stats card-dark">

                    <div class="card-body">
                        <div class="row">
                            <div class="col-5">
                                <div class="icon-big text-center">
                                    <i class="la la-code"></i>
                                </div>
                            </div>
                            <div class="col-7 d-flex align-items-center">
                                <div class="numbers">
                                    <p class="card-category">Proje Sayısı</p>
                                    <h4 class="card-title">@ViewBag.ProjeSayisi</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-stats card-primary">

                    <div class="card-body">
                        <div class="row">
                            <div class="col-5">
                                <div class="icon-big text-center">
                                    <i class="la la-paper-plane"></i>
                                </div>
                            </div>
                            <div class="col-7 d-flex align-items-center">
                                <div class="numbers">
                                    <p class="card-category">Mesaj Sayısı</p>
                                    <h4 class="card-title">@ViewBag.MessajSayisi</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-stats card-info">

                    <div class="card-body">
                        <div class="row">
                            <div class="col-5">
                                <div class="icon-big text-center">
                                    <i class="la la-times"></i>
                                </div>
                            </div>
                            <div class="col-7 d-flex align-items-center">
                                <div class="numbers">
                                    <p class="card-category">Okunmayan Mesaj</p>
                                    <h4 class="card-title">@ViewBag.OkunmayanMesajSayisi</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-stats card-secondary">

                    <div class="card-body card-stats">
                        <div class="row">
                            <div class="col-5">
                                <div class="icon-big text-center">
                                    <i class="la la-check-circle-o"></i>
                                </div>
                            </div>
                            <div class="col-7 d-flex align-items-center">
                                <div class="numbers">
                                    <p class="card-category">Okunan Mesaj</p>
                                    <h4 class="card-title">@ViewBag.OkunanMesajSayisi</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-3">
                <div class="card card-stats card-info">

                    <div class="card-body">
                        <div class="row">
                            <div class="col-5">
                                <div class="icon-big text-center">
                                    <i class="la la-briefcase"></i>
                                </div>
                            </div>
                            <div class="col-7 d-flex align-items-center">
                                <div class="numbers">
                                    <p class="card-category">Deneyim Sayısı</p>
                                    <h4 class="card-title">@ViewBag.DeneyimSayisi</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-stats card-success">

                    <div class="card-body">
                        <div class="row">
                            <div class="col-5">
                                <div class="icon-big text-center">
                                    <i class="la la-bar-chart-o"></i>
                                </div>
                            </div>
                            <div class="col-7 d-flex align-items-center">
                                <div class="numbers">
                                    <p class="card-category">Yetenek Sayısı</p>
                                    <h4 class="card-title">@ViewBag.YetenekSayisi</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-stats card-danger">

                    <div class="card-body">
                        <div class="row">
                            <div class="col-5">
                                <div class="icon-big text-center">
                                    <i class="la la-cogs"></i>
                                </div>
                            </div>
                            <div class="col-7 d-flex align-items-center">
                                <div class="numbers">
                                    <p class="card-category">En Yüksek Yetenek</p>
                                    <h4 class="card-title">@ViewBag.EnYuksekYetenek</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-stats card-warning">

                    <div class="card-body">
                        <div class="row">
                            <div class="col-5">
                                <div class="icon-big text-center">
                                    <i class="la la-tasks"></i>
                                </div>
                            </div>
                            <div class="col-7 d-flex align-items-center">
                                <div class="numbers">
                                    <p class="card-category">En Düşük Yetenek</p>
                                    <h4 class="card-title">@ViewBag.EnDusukYetenek</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <br />
        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Yetenek Ortalaması</h4>
                    </div>
                    <div class="card-body">
                        <div id="task-complete" class="chart-circle mt-4 mb-3">
                            <div class="card-body">
                                <div id="task-complete" class="chart-circle mt-4 mb-3">
                                    <div class="circles-wrp" style="position: relative; display: inline-block;">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="150" height="150">
                                            <path fill="transparent"
						  stroke="#eee"
						  stroke-width="8"
						  d="M 74.98553920253764 4.000001472638488 A 71 71 0 1 1 74.90138242439691 4.000068488950063 Z"
						  class="circles-maxValueStroke">
					</path> 
		 			<path fill="transparent"
						  stroke="#1D62F0"
						  stroke-width="8"
						  d="M 74.98553920253764 4.000001472638488 A 71 71 0 1 1 7.458509176231658 53.11057293342702"
						  class="circles-valueStroke">
					</path> 
                                        </svg>
                                        <div class="circles-text"
                                             style="position: absolute; top: 0; left: 0; text-align: center; width: 100%; font-size: 52.5px; height: 150px; line-height: 150px;">
                                            @ViewBag.YetenekOrtalamasi
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

