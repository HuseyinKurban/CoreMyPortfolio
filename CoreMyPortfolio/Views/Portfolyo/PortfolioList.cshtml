@model List<Portfolio>
@{
    ViewData["Title"] = "PortfolioList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Projeler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Projeler Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Projeler ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>

                                    <th scope="col">Başlık</th>
                                    <th scope="col">Alt Başlık</th>
                                    <th scope="col">Resim</th>
                                    <th scope="col">Proje Linki</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.Title</td>
                                        <td>@item.SubTitle</td>
                                        <td><img src="@item.ImageUrl" style="width: 250px; height: 150px;" /></td>
                                        <td>@item.Url</td>
                                        <td>@item.Description</td>
                                        <td><a href="/Portfolyo/DeletePortfolio/@item.PortfolioId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Portfolyo/UpdatePortfolio/@item.PortfolioId" class="btn btn-success">Güncelle</a></td>

                                    </tr>

                                }

                            </tbody>
                        </table>
                        <a href="/Portfolyo/CreatePortfolio" class="btn btn-primary">Yeni Proje Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

